<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/grey_trans_20_opacity_container_highlight" />
            <stroke android:width="1dp"
                android:color="@color/grey_trans_20_opacity_container_highlight" />
            <corners android:radius="@dimen/button_background_radius" />
            <padding
                android:bottom="@dimen/button_background_padding"
                android:left="@dimen/button_background_padding"
                android:right="@dimen/button_background_padding"
                android:top="@dimen/button_background_padding" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="270"
                android:endColor="@color/main_gray_trans_20_opacity_container_color"
                android:startColor="@color/main_gray_trans_20_opacity_container_color" />
            <stroke android:width="1dp"
                android:color="@color/main_gray_trans_20_opacity_container_color" />
            <corners android:radius="@dimen/button_background_radius" />
            <padding
                android:bottom="@dimen/button_background_padding"
                android:left="@dimen/button_background_padding"
                android:right="@dimen/button_background_padding"
                android:top="@dimen/button_background_padding" />
        </shape>
    </item>
</selector>