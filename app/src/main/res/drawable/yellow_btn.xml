<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/yellow_button_down" />
            <stroke android:width="1dp" android:color="@color/yellow_button_down" />
            <corners android:radius="@dimen/button_background_radius" />
            <padding
                android:bottom="@dimen/button_background_padding"
                android:left="@dimen/button_background_padding"
                android:right="@dimen/button_background_padding"
                android:top="@dimen/button_background_padding" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/yellow_button_up" />
            <stroke android:width="1dp" android:color="@color/yellow_button_up" />
            <corners android:radius="@dimen/button_background_radius" />
            <padding
                android:bottom="@dimen/button_background_padding"
                android:left="@dimen/button_background_padding"
                android:right="@dimen/button_background_padding"
                android:top="@dimen/button_background_padding" />
        </shape>
    </item>
</selector>