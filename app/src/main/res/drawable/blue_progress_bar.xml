<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="0"
                android:endColor="#888888"
                android:startColor="#888888"/>
        </shape>
    </item>

    <!-- Define the progress.xml properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="0"
                    android:endColor="@color/blue_button_up"
                    android:startColor="@color/blue_button_up"/>
            </shape>
        </clip>
    </item>

</layer-list>