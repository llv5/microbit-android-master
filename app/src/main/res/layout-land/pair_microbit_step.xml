<?xml version="1.0" encoding="utf-8"?><!-- steps and instructions -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pairTipButtonText"
    style="@style/pairing_step_tip_layout_style"
    android:layout_height="0dp"
    android:layout_weight="1"
    tools:showIn="@layout/view_pairing_step_1">

    <TextView
        android:id="@+id/pair_tip_step_1_step"
        style="@style/pairing_step_tip_text_style"
        android:textSize="@dimen/pairing_step_title_text_size"
        android:contentDescription="@string/desc_connect_tip_text_step"
        android:text="@string/connect_tip_text_step" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/pair_tip_step_1_step"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/pair_tip_step_1_instructions"
            style="@style/pairing_step_tip_text_style"
            android:layout_width="@dimen/pairing_step_text_width"
            android:textSize="@dimen/pairing_step_tip_instruction_text_size"
            android:layout_alignBottom="@id/pairing_step_one_image"
            android:contentDescription="@string/desc_connect_tip_text"
            android:text="@string/connect_tip_text" />

        <ImageView
            android:id="@+id/pairing_step_one_image"
            style="@style/pairing_step_image_layout_style"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_person_step_1" />
    </RelativeLayout>
</RelativeLayout>