<?xml version="1.0" encoding="utf-8"?><!--  instructions -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searching_tip_step_3_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    tools:showIn="@layout/view_pairing_searching">

    <LinearLayout
        style="@style/pairing_step_tip_layout_style"
        android:layout_width="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/searching_microbit_step"
            style="@style/pairing_step_tip_text_style"
            android:text="@string/searching_tip_step_text" />

        <TextView
            android:id="@+id/searching_microbit_step_instructions"
            style="@style/pairing_step_tip_text_style"
            android:contentDescription="@string/desc_searching_tip_text"
            android:text="@string/searching_tip_text_instructions" />
    </LinearLayout>

    <ImageView
        android:id="@+id/searching_emoji"
        style="@style/pairing_step_image_layout_style"
        android:src="@drawable/ic_where_are_you" />
</LinearLayout>