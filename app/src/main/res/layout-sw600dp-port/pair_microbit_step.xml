<?xml version="1.0" encoding="utf-8"?><!-- steps and instructions -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pairTipButtonText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    tools:showIn="@layout/view_pairing_step_1">

    <LinearLayout
        style="@style/pairing_step_tip_layout_style"
        android:layout_width="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/pair_tip_step_1_step"
            style="@style/pairing_step_title_style"
            android:contentDescription="@string/desc_connect_tip_text_step"
            android:text="@string/connect_tip_text_step" />

        <TextView
            android:id="@+id/pair_tip_step_1_instructions"
            style="@style/pairing_step_tip_text_style"
            android:contentDescription="@string/desc_connect_tip_text"
            android:text="@string/connect_tip_text_step_text" />
    </LinearLayout>

    <ImageView
        android:id="@+id/step_one_lets_do_this_image"
        style="@style/pairing_step_image_layout_style"
        android:src="@drawable/ic_person_step_1" />
</LinearLayout>